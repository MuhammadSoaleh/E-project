@model dm.Models.Employees
@{
    
    Layout = "~/Views/Shared/_Layoutadmin.cshtml";
}


<body>




  

  <main id="main" class="main">

    <div class="pagetitle">

      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Services</li>
          <li class="breadcrumb-item active">Update Employee</li>
        </ol>
      </nav>
    </div>

    <section class="section">
      <div class="row">
        <div class="container">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Update Employee</h5>

              <!-- General Form Elements -->
              <form asp-action="EditEmployee" method="post"  enctype="multipart/form-data"> 
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Name</label>
                  <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputEmail" class="col-sm-2 col-form-label">Designation</label>
                  <div class="col-sm-10">
                    <input asp-for="Designation" type="text" class="form-control">
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputPassword" class="col-sm-2 col-form-label">Content</label>
                  <div class="col-sm-10">
                    <textarea asp-for="About" class="form-control" style="height: 100px"></textarea>
                  </div>
                </div>
                <div class="row mb-3">
                  <label asp-for="Image" for="inputEmail" class="col-sm-2 col-form-label">Image</label>
                  <div class="col-sm-10">
                    <input asp-for="Image" name="imgfile"   type="file" class="form-control">
                  </div>
                </div>

                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label"></label>
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update Employee</button>
                  </div>
                </div>






              </form><!-- End General Form Elements -->

            </div>
          </div>

        </div>

        <div class="col-lg-6">



        </div>
      </div>
    </section>

  </main







</body>

