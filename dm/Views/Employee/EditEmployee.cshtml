@model dm.Models.Employees

<h2>Edit Employee</h2>

<form asp-action="EditEmployee" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="About" class="control-label"></label>
        <textarea asp-for="About" class="form-control"></textarea>
        <span asp-validation-for="About" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Designation" class="control-label"></label>
        <input asp-for="Designation" class="form-control" />
        <span asp-validation-for="Designation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label"></label>
        <input type="file" name="imgfile" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
